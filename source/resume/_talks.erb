<div class="grid-wrap listings talks">
  <div class="section">
    <h2 id="talks">Talks</h2>
  </div>
  <div class="content">
    <% data.resume.talks.each do |talk| %>
      <div class="listing">
        <h3>
          <a href="<%= talk.url %>"><%= talk.title %></a>
        </h3>
        <h3>
          <% if talk['event'] %>
            <%= talk['event'] %>,
          <% end %>
          <span class="dates"><%= date(talk.date) %></span>
        </h3>
        <p><%= talk['description'] %></p>
        <!-- this only displayed when printing -->
        <p class="url">
          <a href="<%= talk.url %>"><%= url(talk.url) %></a>
        </p>
      </div>
    <% end %>
  </div>
</div>
