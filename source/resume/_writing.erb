<div class="grid-wrap listings writing">
  <div class="section">
    <h2 id="publications">Publications</h2>
  </div>
  <div class="content">
    <% data.resume.writing.each do |writing| %>
      <div class="listing">
        <h3>
          <a href="<%= writing.url %>"><%= writing.title %></a>
        </h3>
        <h3>
          <% if writing.publisher != 'self' %>
            <%= writing.publisher %>,
          <% end %>
          <span class="dates"><%= date(writing.date) %></span>
        </h3>
        <!-- this only displayed when printing -->
        <div class="url">
          <a href="<%= writing.url %>"><%= url(writing.url) %></a>
        </div>
      </div>
    <% end %>
  </div>
</div>
