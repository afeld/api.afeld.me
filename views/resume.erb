<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>Aidan Feldman's (Long-Form) Resume</title>
    <link rel="stylesheet" type="text/css" href="assets/resume.css">
  </head>
  <body>
    <div class="grid-wrap meta">
      <div class="section">
        <h1 class="name"><%= PROFILE_HSH.name %></h1>
      </div>
      <div class="content">
        <div class="content-inner">
          <div class="url">
            <a href="mailto:<%= PROFILE_HSH.email %>"><%= PROFILE_HSH.email %></a>
          </div>
          <div class="url">
            <a href="<%= PROFILE_HSH.url %>"><%= url(PROFILE_HSH.url) %></a>
          </div>
          <div><%= PROFILE_HSH.location.city %>, <%= PROFILE_HSH.location.state %></div>
        </div>
      </div>
    </div>
    <div class="grid-wrap listings experience">
      <div class="section">
        <h2 id="experience">Experience includes</h2>
      </div>
      <div class="content">
        <% JOBS.each do |job| %>
          <div class="listing">
            <h3>
              <% if job.title %>
                <%= job.title %>,
              <% end %>
              <% if job.url %>
                <a href="<%= job.url %>"><%= job.organization %></a>
              <% else %>
                <%= job.organization %>
              <% end %>
            </h3>
            <div class="dates"><%= date_range(job) %></div>
            <p><%= job.description %></p>
            <% if job['responsibilities']  %>
              <ul class="responsibilities">
                <% job.responsibilities.each do |resp| %>
                  <li>
                    <p>
                      <% title = [resp.group, resp.title].compact.join(' â€” ') %>
                      <% if resp['url'] %>
                        <a href="<%= resp.url %>" class="title"><%= title %></a>:
                      <% else %>
                        <span class="title"><%= title %></span>:
                      <% end %>
                      <%= resp.description %>
                      <% if resp['url'] %>
                        <span class="url">
                          <a href="<%= resp.url %>"><%= url(resp.url) %></a>
                        </span>
                      <% end %>
                    </p>
                  </li>
                <% end %>
              </ul>
            <% end %>
            <% if job['skills'] && job.skills.any? %>
              <div><em>Skills/tools:</em> <%= job.skills.join(', ') %></div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="grid-wrap listings skills">
      <div class="section">
        <h2 id="skills">Skills include</h2>
      </div>
      <div class="content">
        <% [7..INF, 4..6, 1..3].each do |yrs| %>
          <p>
            <strong>
              <%= yrs.begin %><%= yrs.end == INF ? '+' : "-#{yrs.end}" %> years experience:
            </strong>
            <%= skills(yrs).join(', ') %>
          </p>
        <% end %>
      </div>
    </div>
    <div class="grid-wrap listings education">
      <div class="section">
        <h2 id="education">Education</h2>
      </div>
      <div class="content">
        <%# exclude high school %>
        <% PROFILE_HSH.education[0...-1].each do |edu| %>
          <div class="listing">
            <h3><%= edu.school %>, <%= edu.location.city %>, <%= edu.location.state %></h3>
            <div class="dates"><%= date_range(edu) %></div>
            <ul>
              <% edu.degrees.each do |degree| %>
                <li><%= degree.title %> <%= degree.major %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
    <div class="grid-wrap listings talks">
      <div class="section">
        <h2 id="talks">Talks</h2>
      </div>
      <div class="content">
        <% PROFILE_HSH.talks.each do |talk| %>
          <div class="listing">
            <h3>
              <a href="<%= talk.url %>"><%= talk.title %></a>
            </h3>
            <h3><%= talk['event'] %></h3>
            <div class="dates"><%= date(talk.date) %></div>
            <p><%= talk['description'] %></p>
            <!-- this only displayed when printing -->
            <p class="url">
              <a href="<%= talk.url %>"><%= url(talk.url) %></a>
            </p>
          </div>
        <% end %>
      </div>
    </div>
    <div class="grid-wrap listings writing">
      <div class="section">
        <h2 id="publications">Publications</h2>
      </div>
      <div class="content">
        <% PROFILE_HSH.writing.each do |writing| %>
          <div class="listing">
            <h3>
              <a href="<%= writing.url %>"><%= writing.title %></a>
            </h3>
            <% if writing.publisher != 'self' %>
              <h3><%= writing.publisher %></h3>
            <% end %>
            <div class="dates"><%= date(writing.date) %></div>
            <!-- this only displayed when printing -->
            <div class="url">
              <a href="<%= writing.url %>"><%= url(writing.url) %></a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="grid-wrap listings writeups">
      <div class="section">
        <h2 id="writeups">Writeups</h2>
      </div>
      <div class="content">
        <% PROFILE_HSH.writeups.each do |writeup| %>
          <div class="listing">
            <h3>
              <a href="<%= writeup.url %>"><%= writeup.title %></a>
            </h3>
            <h3><%= writeup.publisher %></h3>
            <div class="dates"><%= date(writeup.date) %></div>
            <!-- this only displayed when printing -->
            <div class="url">
              <a href="<%= writeup.url %>"><%= url(writeup.url) %></a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
